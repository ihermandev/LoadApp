<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DownloadRadioButton">
        <item name="android:padding">@dimen/radio_button_padding</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:layout_marginStart">@dimen/label_margin</item>
        <item name="android:layout_marginTop">@dimen/label_margin_top</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="ContentTextStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">21sp</item>
    </style>
</resources>
